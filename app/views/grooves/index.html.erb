<div class="center">
  <p id="notice" ><%= notice %></p>

  <h2>Surcos del lote: <%= @lot.name%></h2>
  <h4>Identificador del lote: <%= @lot.id%></h4>
  
  <%= link_to 'Crear surco', new_farm_lot_groofe_path, {style:'color:#FFFFFF;',class:'btn btn-success right-button'} %>
  <%= link_to 'Volver', farm_lots_path , {style:'color:#FFFFFF;',class:'btn btn-danger right-button'} %>
  <% if @grooves.present? %>
    <form action="http://pi2tucultivo.dis.eafit.edu.co/<%=@lot.id%>">
        <input type="submit" value="Subir imagenes de este lote" class="btn btn-info"/>
    </form>
    <table class="table">
      <thead>
        <tr>
          <th>Identificador</th>
          <th>Cantidad de plantas</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @grooves.each do |groofe| %>
          <tr>
            <td><%= groofe.id %></td>
            <td><%= groofe.quantity %></td>
            <td><%= link_to 'Ver reportes', farm_lot_groofe_plague_reports_path(groofe_id: groofe.id) %></td> 
            <td><%= link_to 'Editar', edit_farm_lot_groofe_path(id: groofe.id) %></td>
            <td><%= link_to 'Eliminar',farm_lot_groofe_path(id: groofe.id), method: "delete", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%if @show_lot%>
      <%= render 'graphics/heatline_chart' %>
    <%end%>
  <%else%>
    <p class="left">Usted no ha creado todav√≠a ningun surco para este lote,
     para hacerlo haga clic en "Crear Surco".</p>
  <%end%>
  <br>
</div>
