<div class="center">
  <p id="notice"><%= notice %></p>

  <h1>Surcos del lote: <%= @lot.name%></h1>
  <h2>ID del lote: <%= @lot.id%></h2>

  <%= link_to 'Crear surco', new_farm_lot_groofe_path, {style:'color:#FFFFFF;',class:'btn btn-success right-button'} %>
  <%= link_to 'Volver', farm_lots_path , {style:'color:#FFFFFF;',class:'btn btn-danger right-button'} %>


  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Cantidad de plantas</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @grooves.each do |groofe| %>
        <tr>
          <td><%= groofe.id %></td>
          <td><%= groofe.quantity %></td>
          <td><%= link_to 'Ver reportes', farm_lot_groofe_plague_reports_path(groofe_id: groofe.id) %></td> 
          <td><%= link_to 'Editar', edit_farm_lot_groofe_path(id: groofe.id) %></td>
          <td><%= link_to 'Destruir', controller: "grooves", method: "destroy", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
