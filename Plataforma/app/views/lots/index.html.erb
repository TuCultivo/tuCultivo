<p id="notice"><%= notice %></p>

<h1>Lots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Farm</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= lot.name %></td>
        <td><%= lot.location %></td>
        <td><%= lot.farm.name %></td>
        <td><%= link_to 'Show', farm_lot_url(id: lot.id) %></td>
        <td><%= link_to 'Edit', edit_farm_lot_path(id: lot.id) %></td>
        <td><%= link_to 'Destroy', controller: "lots", method: "destroy", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lot', new_farm_lot_path %>
