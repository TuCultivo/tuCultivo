<p id="notice"><%= notice %></p>

<h1>Grooves</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Lot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grooves.each do |groofe| %>
      <tr>
        <td><%= groofe.quantity %></td>
        <td><%= groofe.lot.name %></td>
        <td><%= link_to 'Ver reportes', farm_lot_groofe_plague_reports_path(groofe_id: groofe.id) %></td> 
        <td><%= link_to 'Edit', edit_farm_lot_groofe_path(id: groofe.id) %></td>
        <td><%= link_to 'Destroy', controller: "grooves", method: "destroy", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

